{
    "printWidth": 120,
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "none",
    "endOfLine": "auto",
    "tabWidth": 4,
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "printWidth": 80,
                "proseWrap": "always"
            }
        },
        {
            "files": ["*.css", "*.scss"],
            "options": {
                "singleQuote": false
            }
        }
    ]
}
